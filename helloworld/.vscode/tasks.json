{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active file",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Компилирует текущий файл с помощью clang++"
        },
        {
            "label": "run active file",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build and run",
            "dependsOn": ["build active file", "run active file"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
